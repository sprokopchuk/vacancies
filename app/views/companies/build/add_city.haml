.col-md-5.col-md-offset-3
  %h3
    Select a city for your company
  = simple_form_for @company, :url => wizard_path, :method => :put, html: { class: 'navbar-form' } do |f|
    = f.input :company_id, :as => :hidden, :input_html => { :value => @company.id, name: "company_id"}
    = f.input :country, collection: CountryStateSelect.countries_collection, input_html: {"data-placeholder" => "Choose a country..."}, label: false, wrapper_html: { class: 'hidden' }
    = f.input :state, CountryStateSelect.state_options({ form: f, field_names: { :country => :country, :state => :state}, input_html: {"data-placeholder" => "Choose a state..."}, label: false})
    = f.input :city, CountryStateSelect.city_options({form: f, field_names: {:state => :state, :city => :city}, input_html: {"data-placeholder" => "Choose a city..."}, label: false})
    = f.button :submit, "Continue", class: "btn btn-default btn-sm"



