.col-md-4.col-md-offset-3
  = form_for @vacancy, url: company_vacancies_path(:company_id => @vacancy.company.id), class: "form-horizontal" do |f|
    = render partial: "shared/error_messages", locals: {object: @vacancy}
    .form-group
      = f.label "Title"
      %br/
      .input-group
        = f.text_field :title, class: "form-control", placeholder: "Title"
        %span.input-group-addon
          %span.glyphicon.glyphicon-asterisk
    .form-group
      = f.label "Deadline"
      %br/
      .input-group
        = f.date_field :deadline, min: Date.today, class: "form-control", placeholder: "Deadline"
        .input-group-addon
    .form-group
      = f.label "Description"
      %br/
      .input-group
        = f.text_area :description, rows: 10, class: "form-control"
        %span.input-group-addon
          %span.glyphicon.glyphicon-asterisk
      %br/
      = f.submit "Submit", class: "btn btn-primary"
